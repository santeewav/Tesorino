</section>
<div class="search-container">
    <div class="provinciaContainer">
        <label class="roboto-medium" for="provincia">Provincia:</label>
        <select id="provincia" onchange="aggiornaCitta()">
            <option value="">Seleziona una provincia</option>
        </select>
    </div>
    <div class="cittaContainer">
        <label for="citta" class="roboto-medium">Città:</label>
        <select id="citta">
            <option value="">Seleziona una città</option>
        </select>
    </div>
</div>
<section class="mappaNegozi">
    <div class="negoziContainer">
        <div class="roboto-bold negozi" id="negozi" style="display: none;">
            <h2>Negozi in <span id="nome-citta"></span></h2>
            <ul id="lista-negozi"></ul>
        </div>
    </div>
    <div class="mappaContainer">
        <div id="map"></div>
    </div>

</section>



