<style>
  #loading {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  opacity: 1;
  background-color: white;
  z-index: 1000;
  vertical-align: middle;
  display: inline-block;

}

</style>
<script>
 $(window).load(function() {
    setTimeout(function() {
        $('#loading').fadeOut(1000, function() {
            // Una volta che il loader è scomparso, avvia l'osservatore per le animazioni
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('start-animation');
                        observer.unobserve(entry.target); // Smetti di osservare l'elemento una volta che è animato
                    }
                });
            });

            document.querySelectorAll('.animated').forEach(element => {
                observer.observe(element);
            });
        });
    }, 1000); // 1000 millisecondi di attesa prima di iniziare il fade out
});

</script>
